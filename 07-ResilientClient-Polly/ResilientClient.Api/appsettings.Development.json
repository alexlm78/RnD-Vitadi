{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "System.Net.Http.HttpClient": "Debug"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "System.Net.Http.HttpClient": "Debug"
      }
    }
  },
  "Resilience": {
    "Retry": {
      "MaxRetries": 2,
      "BaseDelaySeconds": 0.5,
      "MaxDelaySeconds": 10.0
    },
    "CircuitBreaker": {
      "FailureThreshold": 3,
      "DurationOfBreakSeconds": 15.0,
      "SamplingDuration": 5
    },
    "Timeout": {
      "TimeoutSeconds": 15.0
    }
  },
  "ExternalApis": {
    "Weather": {
      "BaseUrl": "https://httpbin.org",
      "ApiKey": "demo-key",
      "TimeoutSeconds": 15
    },
    "News": {
      "BaseUrl": "https://httpbin.org",
      "ApiKey": "demo-key",
      "TimeoutSeconds": 15
    }
  }
}