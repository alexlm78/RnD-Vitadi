{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "TaskManager": "Debug"
    }
  },
  "TaskManager": {
    "SeedData": true,
    "MaxTasksPerUser": 50,
    "Features": {
      "EnableAdvancedFiltering": true,
      "EnableTaskHistory": true,
      "EnableEmailNotifications": true,
      "EnableMetrics": true
    },
    "Cache": {
      "ExpirationMinutes": 5,
      "EnableMemoryCache": true,
      "MaxCacheSize": 100
    }
  },
  "Api": {
    "Cors": {
      "AllowedOrigins": ["http://localhost:3000", "http://localhost:4200"],
      "AllowCredentials": true
    },
    "RateLimit": {
      "Enabled": true,
      "MaxRequests": 1000,
      "WindowMinutes": 1
    }
  },
  "Database": {
    "Provider": "InMemory",
    "EnableSqlLogging": true,
    "EnableSensitiveDataLogging": true,
    "Retry": {
      "MaxRetryCount": 1,
      "InitialDelay": 500
    }
  },
  "DetailedErrors": true
}
