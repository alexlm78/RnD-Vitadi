{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "TaskManager": "Information"
    }
  },
  "AllowedHosts": "*",
  "ApplicationName": "TaskManager API",
  "TaskManager": {
    "SeedData": true,
    "MaxTasksPerUser": 100,
    "DefaultPriority": 2,
    "Features": {
      "EnableAdvancedFiltering": true,
      "EnableTaskHistory": false,
      "EnableEmailNotifications": false,
      "EnableMetrics": true
    },
    "Cache": {
      "ExpirationMinutes": 30,
      "EnableMemoryCache": true,
      "MaxCacheSize": 1000
    }
  },
  "Api": {
    "Version": "1.0.0",
    "Title": "TaskManager API",
    "Description": "Una API simple para gestión de tareas que demuestra conceptos de configuración y dependency injection en .NET 8",
    "Contact": {
      "Name": "Equipo de Desarrollo",
      "Email": "dev@taskmanager.com",
      "Url": "https://taskmanager.com"
    },
    "Cors": {
      "AllowedOrigins": ["*"],
      "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "AllowedHeaders": ["*"],
      "AllowCredentials": false
    },
    "RateLimit": {
      "Enabled": false,
      "MaxRequests": 100,
      "WindowMinutes": 1
    },
    "Pagination": {
      "DefaultPageSize": 10,
      "MaxPageSize": 100,
      "EnableAutoPagination": true
    }
  },
  "Database": {
    "Provider": "InMemory",
    "ConnectionString": "",
    "CommandTimeout": 30,
    "EnableSqlLogging": false,
    "EnableSensitiveDataLogging": false,
    "Retry": {
      "MaxRetryCount": 3,
      "InitialDelay": 1000,
      "BackoffMultiplier": 2.0
    }
  }
}
