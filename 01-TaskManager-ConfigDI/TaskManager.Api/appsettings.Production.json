{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "TaskManager": "Information"
    }
  },
  "TaskManager": {
    "SeedData": false,
    "MaxTasksPerUser": 1000,
    "Features": {
      "EnableAdvancedFiltering": true,
      "EnableTaskHistory": true,
      "EnableEmailNotifications": true,
      "EnableMetrics": true
    },
    "Cache": {
      "ExpirationMinutes": 60,
      "EnableMemoryCache": true,
      "MaxCacheSize": 10000
    }
  },
  "Api": {
    "Cors": {
      "AllowedOrigins": ["https://taskmanager.com", "https://app.taskmanager.com"],
      "AllowCredentials": true
    },
    "RateLimit": {
      "Enabled": true,
      "MaxRequests": 100,
      "WindowMinutes": 1
    }
  },
  "Database": {
    "Provider": "SqlServer",
    "CommandTimeout": 60,
    "EnableSqlLogging": false,
    "EnableSensitiveDataLogging": false,
    "Retry": {
      "MaxRetryCount": 5,
      "InitialDelay": 2000,
      "BackoffMultiplier": 2.0
    }
  },
  "DetailedErrors": false
}