# Archivo de ejemplo de variables de entorno
# Copiar este archivo como .env y configurar los valores apropiados

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# Oracle Database
ORACLE_HOST=localhost
ORACLE_PORT=1521
ORACLE_SID=XE
ORACLE_PASSWORD=OraclePass123

# Connection Strings para Oracle
ORACLE_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=training_user;Password=TrainingPass123;
BLOG_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=blog_user;Password=BlogPass123;
CALCULATOR_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=calc_user;Password=CalcPass123;
HEALTH_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=health_user;Password=HealthPass123;
PRODUCT_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=product_user;Password=ProductPass123;
LIBRARY_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=library_user;Password=LibraryPass123;

# SQL Server para Hangfire
SQLSERVER_PASSWORD=SqlServerPass123!
HANGFIRE_CONNECTION_STRING=Server=localhost,1433;Database=HangfireDB;User Id=sa;Password=SqlServerPass123!;TrustServerCertificate=true;

# =============================================================================
# CONFIGURACIÓN DE APLICACIONES
# =============================================================================

# Entorno de ejecución
ASPNETCORE_ENVIRONMENT=Development

# URLs base para las aplicaciones
TASKMANAGER_URL=http://localhost:5001
BLOGAPI_URL=http://localhost:5002
IMAGEPROCESSOR_URL=http://localhost:5003
SYSTEMMONITOR_URL=http://localhost:5004
HEALTHDASHBOARD_URL=http://localhost:5005
PRODUCTCATALOG_URL=http://localhost:5006
RESILIENTCLIENT_URL=http://localhost:5007
CALCULATOR_URL=http://localhost:5008
DIGITALLIBRARY_URL=http://localhost:5009

# =============================================================================
# SERVICIOS EXTERNOS
# =============================================================================

# Redis (para caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=DevRedisPass123
REDIS_CONNECTION_STRING=localhost:6379,password=DevRedisPass123

# APIs externas para ResilientClient
WEATHER_API_KEY=your-openweathermap-api-key-here
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
NEWS_API_KEY=your-newsapi-key-here
NEWS_API_URL=https://newsapi.org/v2

# =============================================================================
# MONITOREO Y OBSERVABILIDAD
# =============================================================================

# Application Insights (opcional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Prometheus
PROMETHEUS_URL=http://localhost:9090

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_URL=http://localhost:3000

# Jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_UI_URL=http://localhost:16686

# =============================================================================
# CONFIGURACIÓN DE EMAIL (para testing)
# =============================================================================

# SMTP para desarrollo (usando Mailhog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@dotnetexamples.local
SMTP_FROM_NAME=.NET Examples

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# JWT para autenticación (si se implementa)
JWT_SECRET_KEY=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_ISSUER=DotNetExamples
JWT_AUDIENCE=DotNetExamples.Users
JWT_EXPIRY_MINUTES=60

# Claves de encriptación
ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Logging
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information
ENABLE_SENSITIVE_DATA_LOGGING=true

# Swagger
ENABLE_SWAGGER_UI=true
SWAGGER_ROUTE_PREFIX=swagger

# CORS (para desarrollo)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:8080

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================

# Configuración para Docker Compose
COMPOSE_PROJECT_NAME=dotnet-examples
COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# Configuración de red Docker
DOCKER_NETWORK_SUBNET=172.20.0.0/16
DOCKER_NETWORK_GATEWAY=172.20.0.1

# =============================================================================
# CONFIGURACIÓN DE TESTING
# =============================================================================

# Base de datos para tests
TEST_CONNECTION_STRING=Data Source=localhost:1521/XE;User Id=test_user;Password=TestPass123;

# URLs para tests de integración
TEST_BASE_URL=http://localhost:5000

# Configuración de Testcontainers
TESTCONTAINERS_ORACLE_IMAGE=container-registry.oracle.com/database/express:latest
TESTCONTAINERS_SQLSERVER_IMAGE=mcr.microsoft.com/mssql/server:2022-latest

# =============================================================================
# CONFIGURACIÓN DE PERFORMANCE
# =============================================================================

# Configuración de threading
THREAD_POOL_MIN_THREADS=10
THREAD_POOL_MAX_THREADS=100

# Configuración de memoria
GC_SERVER=true
GC_CONCURRENT=true

# Timeouts
HTTP_CLIENT_TIMEOUT_SECONDS=30
DATABASE_COMMAND_TIMEOUT_SECONDS=30

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA POR APLICACIÓN
# =============================================================================

# ImageProcessor
IMAGE_UPLOAD_PATH=./uploads/images
IMAGE_MAX_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,bmp

# FileProcessor
FILE_WATCH_DIRECTORY=./watch
FILE_PROCESSED_DIRECTORY=./processed
FILE_ERROR_DIRECTORY=./errors
FILE_PROCESSING_INTERVAL_SECONDS=30

# SystemMonitor
METRICS_COLLECTION_INTERVAL_SECONDS=15
SYSTEM_METRICS_ENABLED=true
CUSTOM_METRICS_ENABLED=true

# HealthDashboard
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10
HEALTH_UI_ENABLED=true

# =============================================================================
# NOTAS DE CONFIGURACIÓN
# =============================================================================

# 1. Reemplazar todos los valores "your-*-here" con valores reales
# 2. Para producción, usar secretos seguros y no almacenar en archivos .env
# 3. Las claves de API externas son opcionales para funcionalidad básica
# 4. Los servicios de monitoreo son opcionales pero recomendados
# 5. Configurar Oracle Database antes de usar las aplicaciones
# 6. Para Docker, asegurar que los puertos no estén en uso
# 7. Revisar docs/getting-started.md para instrucciones detalladas